{
	"workbench.iconTheme": "material-icon-theme",
	"editor.fontFamily": "'Jetbrains Mono'",
	"editor.fontLigatures": false,
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.maxTokenizationLineLength": 99999,
	"terminal.integrated.autoReplies": {},
	"terminal.integrated.fontFamily": "monospace",
	"terminal.integrated.cursorStyle": "line",
	"workbench.list.openMode": "doubleClick",
	"editor.copyWithSyntaxHighlighting": false,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.formatOnSave": true
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"extensions.ignoreRecommendations": true,
	"files.exclude": {
		"**/__pycache__": true,
		"**/.pytest_cache": true,
		"**/.env": true,
		"**/.venv": true,
		"**/venv": true,
		"**/node_modules": true
	},
	"python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
	"python.REPL.enableREPLSmartSend": false,
	"go.toolsManagement.autoUpdate": true,
	"workbench.startupEditor": "none",
	"liveServer.settings.donotVerifyTags": true,
	"liveServer.settings.donotShowInfoMsg": true,
	"emmet.includeLanguages": {
		"postcss": "css",
		"javascript": "javascriptreact"
	},
	"git.openRepositoryInParentFolders": "never",
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.fontWeight": "500",
	"workbench.colorTheme": "Gruvbox Dark Hard",
	"[python]": {
		"editor.formatOnType": true,
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"python.analysis.autoImportCompletions": true,
	"python.formatting.provider": "black",
	"python.analysis.typeCheckingMode": "basic",
	"terminal.external.linuxExec": "xterm-256",
	"terminal.integrated.defaultProfile.osx": "bash",
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"prettier.useTabs": true,
	"editor.linkedEditing": true,
	"[dockercompose]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.format.insertSpaceAfterConstructor": false,
	"javascript.format.insertSpaceBeforeFunctionParenthesis": false,
	"liveServer.settings.AdvanceCustomBrowserCmdLine": "",
	"[markdown]": {
		"editor.unicodeHighlight.ambiguousCharacters": false,
		"editor.unicodeHighlight.invisibleCharacters": false,
		"diffEditor.ignoreTrimWhitespace": false,
		"editor.wordWrap": "on",
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		},
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"go.formatTool": "goimports",
	"files.associations": {
		"*.proto": "proto3"
	},
	"C_Cpp.default.configurationProvider": "clangd",
	"C_Cpp.default.compilerArgs": [
		"-xc++",
		"-std=c++17",
		"-I/usr/local/include" // For macOS
		// "-I/usr/include" // For Linux
	],
	"editor.rulers": [80, 100],
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"redhat.telemetry.enabled": true,
	"prettier.proseWrap": "always",
	"[c]": {
		"editor.formatOnSaveMode": "file"
	},
	"C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
	"hediet.vscode-drawio.resizeImages": null,
	"go.testTimeout": "10m",
	"java.import.gradle.java.home": "/Users/priydey/.sdkman/candidates/java/21-zulu/",
	"[java]": {
		"editor.formatOnSave": false
	},
	"java.configuration.runtimes": [],
	// Bracket-pair guides
	"editor.guides.bracketPairs": true,
	"editor.guides.bracketPairsHorizontal": true, // shows horizontal line
	"editor.guides.highlightActiveBracketPair": true, // highlight both horizontal and vertical lines

	// Bracket-pair colorization
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	// Indentation lines
	"editor.guides.indentation": true,

	"workbench.settings.applyToAllProfiles": [],
	"explorer.compactFolders": false,
	"editor.minimap.enabled": false,
	"breadcrumbs.icons": false,
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false, // shows vertical lines
	"vim.useSystemClipboard": true,
	"vim.easymotion": true,
	"editor.stickyScroll.enabled": false,
	"notebook.stickyScroll.enabled": false,
	"terminal.integrated.stickyScroll.enabled": false,
	"notebook.formatOnSave.enabled": true,
	"editor.formatOnSave": true,
	"go.inlayHints.rangeVariableTypes": true
}
